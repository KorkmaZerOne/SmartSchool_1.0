<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <!-- Define persistence.xml unit -->
    <persistence-unit name="SmartSchoolDB" transaction-type="RESOURCE_LOCAL">
        <properties>
            <!-- database connection -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://moktok.javawebdev.com:33306/omer"/>
            <property name="javax.persistence.jdbc.user" value="omer"/>
            <property name="javax.persistence.jdbc.password" value="omer2020"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

        </properties>
    </persistence-unit>
</persistence>